<div class="guide">
  <div class="area">
    <% if styleguide.image_url != nil %>
    <%= image_tag(styleguide.image_url) %>
    <% end %>
    <h4><%= styleguide.components.count %></h4>
    <p>Components</p>
  </div>
  <%= styleguide.title %>
  <%= styleguide.user.username %>
  <%= link_to 'Show', user_styleguide_path(styleguide.user, styleguide) %>
  <%= link_to 'Edit', edit_styleguide_path(styleguide.user, styleguide) %>
  <%= link_to 'Destroy', user_styleguide_path(styleguide.user, styleguide), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
