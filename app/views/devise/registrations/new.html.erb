<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2>Sign up</h2>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        
            <%= devise_error_messages! %>
            
            <div class="form-group row">
                <%= f.label :FirstName, :class => 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                    <%= f.text_field :FirstName %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :LastName, :class => 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                    <%= f.text_field :LastName %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :email, :class => 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                    <%= f.email_field :email, :autofocus => true %>
                </div>
            </div>

            <div class="form-group row">
                <%= f.label :password, :class => 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                    <%= f.password_field :password %>
                </div>
            </div>

            <!-- <div class="form-group row">
                <%= f.label :password_confirmation, 'Password', :class => 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                    <%= f.password_field :password_confirmation, :placeholder => "confirm" %>
                </div>
            </div> -->
            <div class="row">
                <div class="col-sm-4">
                    <%= f.submit "Sign in", :class => "btn" %>
                </div>
                <div class="col-sm-8">
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
