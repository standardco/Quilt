<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      
            
       

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :user_name %><br>
    <%= f.text_field :FirstName, :autofocus => true %>
  </div>
  
  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>
            <div class="form-group row">
                <%= f.label :password, :class => 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                    <%= f.password_field :password %>
                </div>
            </div>

            <!-- <div class="form-group row">
                <%= f.label :password_confirmation, 'Password', :class => 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                    <%= f.password_field :password_confirmation, :placeholder => "confirm" %>
                </div>
            </div> -->
            <div class="row">
                <div class="col-sm-4">
                    <%= f.submit "Sign in", :class => "btn" %>
                </div>
                <div class="col-sm-8">
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
