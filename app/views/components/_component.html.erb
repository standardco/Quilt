<hr>

<section class="main">

    <article class="component_item">
      <ul class="component_actions">
        <li class="component_delete">
          <%= link_to component_path(component.styleguide.user, component.styleguide, component) do %>
            <i class="icon-launch"></i>
          <% end %>
        </li>
      </ul>
      <h2><%= component.title %></h2>
      <p><%= component.description %></p>

      <div class="component_rendered alert alert-info">
        <%= component.dependencies %>
        <%= component.code %>
      </div>
      <span><%= component.notes %></span>
    </article>  

</section>

