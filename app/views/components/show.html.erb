<% arr = @styleguide.css_paths.split(",") 
    arr.each do |css_path| %>
    <%= stylesheet_link_tag css_path %>   
<% end %>

<div class="component">
    <span class="edit">
        <a href="">Edit</a>
        <a href="">Delete</a>
    </span>
    <h3><%= @component.title %></h3>
    <p><%= @component.description %></p>

    <div class="element">
        <a href="#" class="btn btn-default">Button</a>
    </div>

    <div class="codeline">
        <div class="pull-right">
            <a href="" class="code" data-id="one"><i class="icon-newspaper"></i></a>
            <%= link_to edit_component_path(@component) do %>
                <i class="icon-pen"></i>
            <% end %>
            <a href=""><i class="icon-cancel_circle"></i></a>
        </div>
    </div>
    <div class="code-details one">
        <div class="">
            <strong>Dependencies:</strong>
            <%= @component.dependencies %>

        
            <%= @component.code %>
        

        <p>
          <strong>Notes:</strong>
          <%= @component.notes %>
        </p>

        </div>
    </div>
    <%= link_to 'Back', components_path %>
</div>
